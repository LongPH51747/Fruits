<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AdminHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card for managing products -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_sp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="27dp"
            android:layout_marginVertical="27dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Quản lý sản phẩm"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card for managing orders -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_dh"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="27dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Quản lý đơn hàng"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card for managing customers -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_kh"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="27dp"
            android:layout_marginVertical="27dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Quản lý khách hàng"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card for statistics -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_tk"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="27dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Thống kê"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>

        <!-- Card for managing vouchers -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_vch"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginHorizontal="27dp"
            android:layout_marginVertical="20dp"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Quản lí voucher"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>